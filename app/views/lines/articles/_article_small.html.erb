<div class="article article-preview">
  <figure class="talent-card">
    <a class="card-link" href="<%= article_path(article_small) %>">
      <img class="card-img-bottom"
           src="<%= article_small.image_url %>"
           alt="<%= article_small.title %>"/>

       <figcaption class="card-content">
         <h1><%= article_small.title %></h1>
       </figcaption>
    </a>
  </figure>
</div>
