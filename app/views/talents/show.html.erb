<article class="talent">
  <div id="page-cover">
    <div id="cover-image-container">
      <img id="cover-image" src="<%=image_url @talent.cover.url(:large) %>')" />
    </div>
  </div>
  <header id="page-header">
    <div id="header-content">
      <h1 id="page-title"><%= @talent.name %></h1>
      <h2 id="page-blurb"><%= @talent.appearance %></h2>
    </div>
  </header>

  <div class="page-content">
    <section class="section">
      <h1 class="section-header">
        Projects
      </h1>
      <div class="section-content">
        <% @talent.projects.by_year.each do |year, year_items| %>
          <div class="project-year">
            <h2 class="project-year-number"><%= year %></h2>
            <div class="project-year-list">
              <% year_items.each do |project| %>
                  <h2>
                    <%= project.title %>
                  </h2>
                  <p>
                    <%= project.description %>
                  </p>
                </a>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
    <section class="fullpage-section">
      <div class="grid">
        <div class="grid-sizer"></div>
        <div class="grid-item grid-item--large">
          <img src="<%=image_url @talent.avatar.url(:large) %>')" />
        </div>
        <% @talent.gallery_pictures.each do |picture| %>
          <div class="grid-item">
            <img src="<%= image_url picture.image.url(:large) %>">
          </div>
        <% end %>
      </div>
    </section>
    <section class="section">
      <h1 class="section-header">Similar</h1>
      <% @talent.get_similar.each do | similar | %>
        <div><%= render partial: 'shared/talent_card', talent: similar %></div>
      <% end %>
    </section>
  </div>
</article>