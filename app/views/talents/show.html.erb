<article class="talent">
  <div id="page-cover">
    <div id="cover-image-container">
      <img id="cover-image" src="<%=image_url @talent.cover.url(:large) %>')" />
    </div>
  </div>
  <header id="page-header">
    <div id="header-content">
      <h1 id="page-title"><%= @talent.name %>
      <%= render partial: 'shared/save_button', locals: {talent: @talent} %>
      </h1>

    </div>
  </header>

  <div class="page-content">
    <section class="section">
      <div class="talent-atts">
        <div class="talent-att">
          <h1>
            <span class="icon-height"></span>
          </h1>
          <h2>
            <%= @talent.height_in(:cm) %> / <%=@talent.height_in(:ft) %>
          </h2>
        </div>
        <div class="talent-att">
          <h1>
            <span class="icon-gender"></span>
          </h1>
          <h2>
            <%= @talent.genders.join(' / ') %>
          </h2>
        </div>
        <div class="talent-att">
          <h1>
            <span class="icon-skills"></span>
          </h1>
          <h2>
            <%= @talent.skills.join(' / ') %>
          </h2>
        </div>
        <a class="action-button dark talent-att" href="#">
            <h1>
              <span class="icon icon-download"></span>
            </h1>
            <h2>
              Download cv
            </h2>
        </a>
      </div>
    </section> 

    <section class="fullpage-section talent-gallery">
      <div class="grid">
        <div class="grid-sizer"></div>
        <div class="grid-item grid-item--large">
          <img src="<%=image_url @talent.avatar.url(:large) %>')" />
        </div>
        <% @talent.gallery_pictures.each do |picture| %>
          <div class="grid-item">
            <img src="<%= image_url picture.image.url(:large) %>">
          </div>
        <% end %>
      </div>
    </section>
    <section class="section">
      <h1 class="section-header">
        Featured Projects
      </h1>
      <div class="section-content">
        <% @talent.projects.by_year.each do |year, year_items| %>
          <div class="project-year">
            <h2 class="project-year-number"><%= year %></h2>
            <div class="project-year-list">
              <% year_items.each do |project| %>
                  <h2 class="project-title">
                    <%= project.title %>
                  </h2>
                  <p>
                    <%= project.description %>
                  </p>
                </a>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
    <section class="section">
      <h1 class="section-header">Similar</h1>
      <div class="section-content">
        <% @talent.get_similar.each do | similar | %>
          <%= render partial: 'shared/talent_card', locals: {talent: similar} %>
        <% end %>
      </div>
    </section>
  </div>
</article>