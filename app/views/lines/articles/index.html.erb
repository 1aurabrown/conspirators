<div class="rss">
    <%= link_to image_tag("ic_rss.png"), articles_url(format: "atom") %>
</div>

<div id="articles">
  <%= render partial: 'article_collection', collection: [@first_article] if @first_article %>
  <%= render partial: 'article_collection', collection: @articles %>
</div>

<% if @articles.total_pages > 1 %>
<hr>
<div id="pagination" style="color: white;">
  <%= paginate @articles, outer_window: 1, window: 2, theme: 'lines' %>
</div>
<% end %>
